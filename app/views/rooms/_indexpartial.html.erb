<%@rooms.each do |r|%>

<ul>
    <li>
    <%r.user_id==current_user.id ? name=User.find(r.receiver_id).username : name=User.find(r.user_id).username%>
    <p>conversation with: <%=name%></p>
    <button><%=link_to 'go to messages', room_path(r)%>       </button>
    </li>
</ul>

<p>____________________________________________</p>

<%end%>